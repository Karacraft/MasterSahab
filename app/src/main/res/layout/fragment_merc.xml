<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.karacraft.data.Add_Merchandise_Activity">

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_mercDate"
        android:text="Date"
        />

    <TextView
        android:id="@+id/textView_mercDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tv_mercDate"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Tailor"
        android:id="@+id/button_mercSelectTailor"
        android:layout_below="@id/textView_mercDate"
        android:layout_margin="5dp"
        android:background="@drawable/kc_button"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Tailor City"
        android:layout_below="@id/button_mercSelectTailor"
        android:id="@+id/tv_mercTailorCity"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_mercTailorCity"
        android:layout_below="@id/button_mercSelectTailor"
        android:layout_toRightOf="@id/tv_mercTailorCity"
        />
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Card Number"
        android:layout_below="@id/textView_mercTailorCity"
        android:id="@+id/tv_mercTailorCardNumber"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/mygreen"
        android:id="@+id/textView_mercTailorCardNumber"
        android:layout_below="@id/textView_mercTailorCity"
        android:layout_toRightOf="@id/tv_mercTailorCardNumber"
        />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Select Item"
        android:layout_below="@id/textView_mercTailorCardNumber"

        android:id="@+id/tv_mercSelectItem"
        />
    <Spinner
        android:id="@+id/spinner_mercSelectItem"
        android:layout_below="@id/textView_mercTailorCardNumber"
        android:layout_toRightOf="@id/tv_mercSelectItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </Spinner>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:clickable="true"
        android:src="@drawable/akms_icon"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView_itemMercPicture"
        android:layout_below="@id/spinner_mercSelectItem"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/imageView_itemMercPicture"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/button_mercDataSaveCancel"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/kc_button"
            android:layout_marginBottom="5dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/button_mercDataSave"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/kc_button"
            android:layout_marginBottom="5dp"
            />

    </LinearLayout>


</RelativeLayout>
