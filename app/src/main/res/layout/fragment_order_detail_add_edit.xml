<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/Layout_Relative_OrderDetails"
    tools:context=".OrderAddEditActivity">

    <TextView
        android:id="@+id/tv_orderDetailAddEditCardNumber"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Card Number"
        android:textAppearance="?android:textAppearanceMedium"
        />
    <TextView
        android:id="@+id/textView_orderDetailAddEditCardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:clickable="true"
        android:textColor="@color/mygreen"
        android:layout_toRightOf="@id/tv_orderDetailAddEditCardNumber"
        android:hint="Card Number"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/mygreen"
        android:layout_toRightOf="@id/textView_orderDetailAddEditCardNumber"
        android:src="@drawable/ic_menu_edit"
        />

    <TextView
        android:id="@+id/tv_orderDetailAddEditDate"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Order Date"
        android:layout_below="@+id/tv_orderDetailAddEditCardNumber"
        />

    <TextView
        android:id="@+id/textView_orderDetailAddEditPlacementDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_orderDetailAddEditDate"
        android:hint="Order Date"
        android:layout_below="@+id/tv_orderDetailAddEditCardNumber"
        />

    <TextView
        android:id="@+id/tv_orderDetailAddEditSuitCode"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_below="@+id/textView_orderDetailAddEditPlacementDate"
        android:text="Suit Code"
        />

    <TextView
        android:id="@+id/textView_orderDetailAddEditSuitCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/myorange"
        android:layout_below="@+id/textView_orderDetailAddEditPlacementDate"
        android:layout_toRightOf="@+id/tv_orderDetailAddEditSuitCode"
        android:hint="Suit Code"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/mygreen"
        android:layout_below="@+id/textView_orderDetailAddEditPlacementDate"
        android:layout_toRightOf="@+id/textView_orderDetailAddEditSuitCode"
        android:src="@drawable/ic_menu_edit"
        />

    <TextView
        android:id="@+id/tv_orderDetailAddEditSuitQty"
        android:layout_below="@+id/textView_orderDetailAddEditSuitCode"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Suit Qty"
        />

    <Spinner
        android:id="@+id/spinner_orderDetailAddEditSuitQty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_orderDetailAddEditSuitCode"
        android:layout_toRightOf="@+id/tv_orderDetailAddEditSuitQty"
        >
    </Spinner>


    <TextView
        android:id="@+id/tv_orderDetailAddEditCity"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_orderDetailAddEditSuitQty"
        android:text="City"
        />

    <TextView
        android:id="@+id/textView_orderDetailAddEditCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_orderDetailAddEditSuitQty"
        android:layout_toRightOf="@+id/tv_orderDetailAddEditCity"
        android:hint="City"
        />

    <TextView
        android:id="@+id/tv_orderDetailAddEditSuitPrice"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_orderDetailAddEditCity"
        android:text="Price"
        />

    <EditText
        android:id="@+id/editText_orderDetailAddEditSuitPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:textColor="@color/myred"
        android:layout_toRightOf="@id/tv_orderDetailAddEditSuitPrice"
        android:layout_below="@+id/tv_orderDetailAddEditCity"
        android:hint="Price"
        android:inputType="number"
        />

    <TextView
        android:id="@+id/tv_orderDetailAddEditSuitColor"
        android:text="Suit Color"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText_orderDetailAddEditSuitPrice"
        />
    <TextView
        android:id="@+id/textView_orderDetailAddEditSuitColor"
        android:hint="Color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_orderDetailAddEditSuitColor"
        android:layout_below="@id/editText_orderDetailAddEditSuitPrice"
        />

    <TextView
        android:id="@+id/tv_orderDetailAddEditStats"
        android:text="Order Status"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_orderDetailAddEditSuitColor"
        />

    <Spinner
        android:id="@+id/spinner_orderDetailAddEditSuitStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_orderDetailAddEditStats"
        android:layout_below="@id/textView_orderDetailAddEditSuitColor"
        >
    </Spinner>

    <TextView
        android:id="@+id/tv_orderDetailAddEditStatusChangeDate"
        android:text="Change Date"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_orderDetailAddEditSuitStatus"
        />
    <TextView
        android:id="@+id/textView_orderDetailAddEditStatusChangeDate"
        android:hint="Changing Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_orderDetailAddEditStatusChangeDate"
        android:layout_below="@id/spinner_orderDetailAddEditSuitStatus"
        />

    <TextView
        android:id="@+id/tv_orderDetailAddEditDiscPrice"
        android:text="Discount Price"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_orderDetailAddEditStatusChangeDate"
        />
    <EditText
        android:id="@+id/editText_orderDetailAddEditDiscPrice"
        android:hint="Disc Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/myorange"
        android:background="@android:color/transparent"
        android:inputType="number"
        android:layout_toRightOf="@id/tv_orderDetailAddEditDiscPrice"
        android:layout_below="@id/textView_orderDetailAddEditStatusChangeDate"
        />

    <TextView
        android:id="@+id/tv_orderDetailAddEditReceipt"
        android:text="Receipt"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText_orderDetailAddEditDiscPrice"
        />

    <EditText
        android:id="@+id/editText_orderDetailAddEditReceipt"
        android:hint="Receipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:textColor="@color/mywhite"
        android:layout_toRightOf="@id/tv_orderDetailAddEditReceipt"
        android:layout_below="@id/editText_orderDetailAddEditDiscPrice"
        />

    <TextView
        android:id="@+id/tv_orderDetailAddEditCatalog"
        android:text="Catalog"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText_orderDetailAddEditReceipt"
        />
    <TextView
        android:id="@+id/textView_orderDetailAddEditCatalog"
        android:hint="Catalog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_orderDetailAddEditCatalog"
        android:layout_below="@id/editText_orderDetailAddEditReceipt"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:layout_below="@id/textView_orderDetailAddEditCatalog"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/button_orderDetailCancelData"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/kc_button"
            android:layout_marginBottom="5dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/button_orderDetailSaveData"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/kc_button"
            android:layout_marginBottom="5dp"
            />

    </LinearLayout>

</RelativeLayout>
