            android:layout_below="@id/tv_tailorDetailsAddress"
            />
        <Button
            android:id="@+id/button_addOrder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_tailor_buttonAddOrder"
            android:layout_below="@+id/button_addMerchandise"
            />

        <Button
            android:id="@+id/button_viewMerchandise"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_tailor_buttonViewMerch"
            android:layout_below="@+id/button_addOrder"
            />

        <Button
            android:id="@+id/button_viewPendingOrders"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_tailor_buttonViewPendindOrder"
            android:layout_below="@+id/button_viewMerchandise"
            />

        <Button
            android:id="@+id/button_viewAllOrders"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_tailor_buttonAllOrders"
            android:layout_below="@+id/button_viewPendingOrders"
            />
        -->
    </LinearLayout>

</RelativeLayout>
